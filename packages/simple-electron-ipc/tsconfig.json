{
  "compilerOptions": {
    "rootDir": "./",
    "outDir": "./dist",
    "module": "ESNext",
    "target": "ES2017",
    "lib": [
      "ES2017",
      "DOM"
    ],
    "strict": true,
    "allowJs": false,
    "skipLibCheck": true,
    "declaration": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "noImplicitOverride": true,
  },
  "include": [
    "src"
  ],
  "exclude": [
    "dist",
    "vite.config.ts",
    "demo"
  ]
}