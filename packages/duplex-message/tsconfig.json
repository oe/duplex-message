{
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist",
    "module": "commonjs",
    "target": "ES2017",
    "lib": [
      "ES2017",
      "DOM"
    ],
    "types": [
      "vite/client",
      "@vitest/browser/providers/playwright"
    ],
    "strict": true,
    "allowJs": true,
    "checkJs": true,
    "skipLibCheck": true,
    "declaration": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "paths": {
      "src/*": [
        "src/*"
      ]
    },
  },
  "include": [
    "src",
    "test",
    "demo"
  ],
  "exclude": [
    "dist",
    "vite.config.ts"
  ]
}