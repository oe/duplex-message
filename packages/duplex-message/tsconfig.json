{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",
    "module": "commonjs",
    "target": "ES2017",
    "lib": [
      "ES2017",
      "DOM"
    ],
    "strict": true,
    "allowJs": false,
    "skipLibCheck": true,
    "declaration": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "exclude": [
    "dist",
    "test",
    "rollup.config.ts"
  ]
}